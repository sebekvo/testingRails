<%= simple_form_for([:admin,@room]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :code %>
      <%= f.input :building_id, :collection => Room::BUILDING_NAMES.sort.map {|k,v| [k,v]} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>

<% end %>
