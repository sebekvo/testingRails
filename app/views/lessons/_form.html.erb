<%= simple_form_for(@lesson) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.input :duration %>
    <%= f.input :teacher_id, :collection => Lesson::TEACHERS_NAMES.sort.map {|k,v| [k,v]} %>
    <%= f.input :room_id, :collection => Lesson::ROOMS_NAMES.sort.map {|k,v| [k,v]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
