<%= simple_form_for(room) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title %>
    </div>

    <div class="form-inputs">
      <%= f.input :code %>
    </div>

    <div class="form-actions">
      <%= f.input :building_id, :collection => Room::HASH_NAME.sort.map {|k,v| [k,v]} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>

<% end %>
